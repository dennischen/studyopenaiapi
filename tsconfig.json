{
    "compilerOptions": {
        "target": "ES2015",//i.e. ES6
        "module": "ESNext",//
        "moduleResolution": "Node10",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./build",
        "incremental": true,
        "resolveJsonModule": true,
    }
}